<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_linearlayout_outermost"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/main_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:text="2048"
            android:fontFamily="@font/font_rockletter_transparent"
            android:textSize="40sp"
            />

        <com.piramideofra.aprw.manedger.game.ScoreBoxView
            android:id="@+id/main_scoreboxview_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_toLeftOf="@+id/main_scoreboxview_best"
            android:layout_toEndOf="@+id/main_textview_title"
            custom:label_text="Score" />

        <com.piramideofra.aprw.manedger.game.ScoreBoxView
            android:id="@+id/main_scoreboxview_best"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            custom:label_text="Best"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <TextView
            android:id="@+id/main_textview_game_title"
            android:layout_height="wrap_content"
            android:layout_width="1dp"
            android:text="Join the number to get the 2048 tile!"
            android:textStyle="bold"
            android:textSize="24sp"
            android:fontFamily="@font/font_rockletter_transparent"
            android:layout_gravity="center_vertical"
            android:maxLines="2"
            android:layout_weight="0.6"
            />

        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/main_button_new_game"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="New Game"
            android:background="@color/onColor"
            android:fontFamily="@font/font_rockletter_transparent"
            android:textSize="20sp"
            android:layout_weight="0.4"
            android:textStyle="bold"
            />

    </LinearLayout>


    <com.piramideofra.aprw.manedger.game.MatrixView
        android:id="@+id/main_matrixview"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_textview_how_to_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_rockletter_simple"
            android:textColor="@color/ColorWhite"
            android:background="@color/bleack"
            android:text="HOW TO PLAY: Use your arrow keys to move the tiles. When two tiles with the same number touch, they merge into one!"
            />

        <TextView
            android:id="@+id/main_textview_lucky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="No new square!"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#2EB82E"
            android:visibility="gone"
            />


    </FrameLayout>
</LinearLayout>
